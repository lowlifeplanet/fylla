function _<%= @executable_name %><%= context_name %> {
  _arguments \
  <%- unless command.options.nil? -%>
    <%- command.options.each do |option| -%>
      "-<%= option.name%>=[<%= option.banner %>]"
      "-<%= option.aliases[0]%>=[<%= option.banner %>]"
    <%- end -%>
  <%- end -%>
    "-h[Show help information]" \
    "--help[Show help information]" \
    "1: :_commands" \
    "*::arg:->args"/.
}
